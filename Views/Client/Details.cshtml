@model gestion_dette_web.Models.Client

@{
    ViewData["Title"] = "Détails du Client";
}

<div class="container mt-4">
    <h1>Détails du Client</h1>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nom:</strong> @Model.Nom</p>
    <p><strong>Prénom:</strong> @Model.Prenom</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Téléphone:</strong> @Model.Telephone</p>
    <p><strong>Adresse:</strong> @Model.Adresse</p>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Retour à la liste</a>
</div>
