@model gestion_dette_web.Models.Dette

@{
    ViewData["Title"] = "Détails de la Dette";
}

<div class="container mt-4">
    <h1>Détails de la Dette</h1>

    <div>
        <h4>Informations de la Dette</h4>
        <p><strong>Date:</strong> @Model.Date.ToString("dd/MM/yyyy")</p>
        <p><strong>Montant Total:</strong> @Model.Montant €</p>
        <p><strong>Montant Versé:</strong> @Model.MontantVerser €</p>
        <p><strong>Client:</strong> @Model.Client.Surnom</p>
    </div>

    <h4 class="mt-4">Articles de la Dette</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom de l'Article</th>
                <th>Prix Unitaire (CFA)</th>
                <th>Quantité</th>
                <th>Prix Total (CFA)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Details != null)
            {
                @foreach (var detail in Model.Details)
                {
                    <tr>
                        <td>@detail.Article.Libelle</td>
                        <td>@detail.Article.Prix</td>
                        <td>@detail.Qte</td>
                        <td>@detail.PrixTotal</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Retour</a>
</div>
